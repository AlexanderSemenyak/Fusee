<Project Sdk="Microsoft.NET.Sdk" >
  <PropertyGroup>
    <RootNamespace>Fusee.Serialization</RootNamespace>
    <PackageId>Fusee.Serialization</PackageId>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <OutputPath>$(BaseOutputPath)\Libraries</OutputPath>
    <DocumentationFile>$(OutputPath)\$(RootNamespace).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="protobuf-net">
      <HintPath>$(FuseeEngineRoot)\ext\protobuf\$(Configuration)\protobuf-net.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(FuseeEngineRoot)\src\Math\Core\Fusee.Math.Core.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <BuildDependsOn>
      $(BuildDependsOn);
      SerializationCompileSerializer
    </BuildDependsOn>
  </PropertyGroup>

  <!-- This target calls the protobuf precompiler. Note that the filename is hardwired and no item list is taken -->
  <Target Name="SerializationCompileSerializer" Inputs="$(OutputPath)$(AssemblyName).dll" Outputs="$(OutputPath)Fusee.SerializationSerializer.dll" AfterTargets="AfterBuild">
    <Message Importance="High" Text="$(FuseeEngineRoot)\ext\protobuf\PrecompileTool\precompile &quot;$(OutputPath)$(AssemblyName).dll&quot; -o:&quot;$(OutputPath)Fusee.SerializationSerializer.dll&quot; -t:Fusee.Serialization.Serializer -f:&quot;C:\Program Files\dotnet\sdk\NuGetFallbackFolder\netstandard.library\2.0.3\build\netstandard2.0\ref&quot;" />
    <Exec Command="&quot;$(FuseeEngineRoot)\ext\protobuf\PrecompileTool\precompile&quot; &quot;$(OutputPath)$(AssemblyName).dll&quot; -o:&quot;$(OutputPath)Fusee.SerializationSerializer.dll&quot; -t:Fusee.Serialization.Serializer -f:&quot;C:\Program Files\dotnet\sdk\NuGetFallbackFolder\netstandard.library\2.0.3\build\netstandard2.0\ref&quot;" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Message Importance="High" Text="$(AssemblyName).dll -&gt; $(OutputPath)SerializationSerializer.dll" />
  </Target>
  <PropertyGroup>
    <CleanDependsOn>
      $(CleanDependsOn);
      SerializationCompileClean
    </CleanDependsOn>
  </PropertyGroup>
  <Target Name="SerializationCompileClean">
    <Message Importance="High" Text="Deleting $(OutputPath)SerializationSerializer.dll" />
    <Delete Files="$(OutputPath)SerializationSerializer.dll" />
  </Target>
</Project>