<Project>
  <PropertyGroup>
    <RootNamespace>Fusee.Serialization</RootNamespace>
    <PackageId>Fusee.Serialization</PackageId>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />

  <PropertyGroup>
    <OutputPath>$(BaseOutputPath)\Libraries</OutputPath>
    <DocumentationFile>$(OutputPath)\$(RootNamespace).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="protobuf-net">
      <HintPath>$(FuseeBuildRoot)\ext\protobuf\$(Configuration)\protobuf-net.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(FuseeBuildRoot)\src\Math\Core\Fusee.Math.Core.csproj" />
  </ItemGroup>

  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

  <PropertyGroup>
    <BuildDependsOn>
      $(BuildDependsOn);
      SerializationCompileSerializer
    </BuildDependsOn>
  </PropertyGroup>

  <!-- This target calls the protobuf precompiler. Note that the filename is hardwired and no item list is taken -->
  <Target Name="SerializationCompileSerializer" Inputs="$(OutputPath)$(AssemblyName).dll" Outputs="$(OutputPath)Fusee.SerializationSerializer.dll">
    <Message Importance="High" Text="mono $(FuseeBuildRoot)ext/protobuf/PrecompileTool/precompile.exe &quot;$(OutputPath.Replace('/', '\\'))$(AssemblyName).dll&quot; -o:&quot;$(OutputPath.Replace('/', '\\'))Fusee.SerializationSerializer.dll&quot; -t:Fusee.Serialization.Serializer -f:&quot;/usr/share/dotnet/shared/Microsoft.NETCore.App/2.2.2/&quot;" />
    <Exec Command="mono --debug --profile=iomap $(FuseeBuildRoot)ext/protobuf/PrecompileTool/precompile.exe &quot;$(OutputPath.Replace('/', '\\'))$(AssemblyName).dll&quot; -o:&quot;$(OutputPath.Replace('/', '\\'))Fusee.SerializationSerializer.dll&quot; -t:Fusee.Serialization.Serializer -f:&quot;/usr/share/dotnet/shared/Microsoft.NETCore.App/2.2.2/&quot;" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Message Importance="High" Text="$(AssemblyName).dll -&gt; $(OutputPath)SerializationSerializer.dll" />
  </Target>
  <PropertyGroup>
    <CleanDependsOn>
      $(CleanDependsOn);
      SerializationCompileClean
    </CleanDependsOn>
  </PropertyGroup>
  <Target Name="SerializationCompileClean">
    <Message Importance="High" Text="Deleting $(OutputPath)SerializationSerializer.dll" />
    <Delete Files="$(OutputPath)SerializationSerializer.dll" />
  </Target>
</Project>